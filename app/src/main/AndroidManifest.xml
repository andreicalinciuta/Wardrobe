<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.andrei.wardrobe">
 <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Wardrobe"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".StartPage"
            android:screenOrientation="portrait"/>
        <activity android:name=".Credits"
            android:screenOrientation="portrait" />
        <activity android:name=".Shelf1"
            android:screenOrientation="portrait"/>
        <activity android:name=".Shelf2"
            android:screenOrientation="portrait"/>
        <activity android:name=".Shelf3"
            android:screenOrientation="portrait"/>
        <activity android:name=".Shelf4"
            android:screenOrientation="portrait"></activity>
        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.example.andrei.wardrobe.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths"></meta-data>

        </provider>

    </application>

</manifest>